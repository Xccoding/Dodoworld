{
    "name": "dodoworld",
    "description": "a ts-react template for dota2 modding, together with some helper scripts",
    "license": "MIT",
    "repository": "https://github.com/XavierCHN/x-template",
    "dota_developer": {
        "main_lang": "SChinese",
        "publish_options": {
            "excludeFiles": [
                "game/scripts/src/**/*.*",
                "**/*.ts",
                "**/*.bin",
                "**/*.py",
                "**/*.cfg"
            ],
            "encryptFiles": [
                "**/*.lua",
                "!game/scripts/vscripts/lualib_bundle.lua",
                "!game/scripts/vscripts/addon_init.lua",
                "!game/scripts/vscripts/addon_game_mode.lua",
                "!game/scripts/vscripts/addon_game_mode_client.lua",
                "!game/scripts/vscripts/utils/decrypt.lua",
                "!game/scripts/vscripts/utils/aeslua.lua",
                "!game/scripts/vscripts/utils/aeslua/**/*.lua"
            ],
            "encryptDedicatedServerKeyTest": "Invalid_NotOnDedicatedServer",
            "encryptDedicatedServerKeyRelease": "这里需要填入正式的发布密钥 GetDedicatedServerKeyV2('version') 的结果"
        }
    },
    "scripts": {
        "postinstall": "node scripts/install.js",
        "launch": "node scripts/launch.js",
        "preprod": "node scripts/prepublish.js",
        "pretest": "node scripts/prepublish.js",
        "test": "run-s prod:* && run-s test_copy",
        "prod": "run-s prod:* && run-s release_copy",
        "prod:gulp": "gulp prod",
        "prod:panorama": "node --preserve-symlinks node_modules/webpack/bin/webpack.js --config content/panorama/webpack.prod.js",
        "prod:vscripts": "tstl --project game/scripts/tsconfig.json",
        "test_copy": "node scripts/publish.js test",
        "release_copy": "node scripts/publish.js release",
        "predev": "node scripts/install.js && gulp predev",
        "dl": "run-p dev:* fl",
        "fl": "npm run launch",
        "dev": "run-p dev:*",
        "dev:gulp": "gulp dev",
        "dev:panorama": "node --preserve-symlinks node_modules/webpack/bin/webpack.js --config content/panorama/webpack.dev.js --watch",
        "dev:vscripts": "tstl --project game/scripts/tsconfig.json --watch",
        "compile": "node scripts/compile.js",
        "jssync": "gulp jssync",
        "api": "openapi --input scripts/server_api.json --output game/scripts/src/server --exportCore false && node scripts/clean_api.js"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@babel/preset-react": "^7.16.5",
        "@demon673/react-panorama": "^0.2.2",
        "@demon673/webpack-panorama": "^0.2.7",
        "@moddota/dota-lua-types": "^4.19.0",
        "@moddota/panorama-types": "^1.20.0",
        "@types/events": "^3.0.0",
        "@types/fs-extra": "^9.0.13",
        "@types/gulp": "^4.0.9",
        "@types/lodash": "^4.14.182",
        "@types/node": "^18.0.0",
        "@types/node-xlsx": "^0.15.3",
        "@types/papaparse": "^5.3.2",
        "@types/react": "^16.14.5",
        "@types/through2": "^2.0.36",
        "aes-js": "^3.1.2",
        "anymatch": "^3.1.2",
        "babel-loader": "^8.2.3",
        "body-parser": "^1.19.0",
        "classnames": "^2.3.1",
        "commander": "^6.2.1",
        "events": "^3.3.0",
        "express": "^4.17.1",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^5.2.1",
        "fs-extra": "^9.1.0",
        "gulp": "^4.0.2",
        "gulp-dotax": "^1.0.27",
        "json-to-ts": "^1.7.0",
        "json5": "^2.2.1",
        "keyvalues-node": "0.0.2",
        "klaw": "^4.0.1",
        "less": "^4.1.2",
        "less-loader": "^11.0.0",
        "lodash": "^4.17.21",
        "node-xlsx": "^0.15.0",
        "npm-run-all": "^4.1.5",
        "openapi-typescript-codegen": "^0.23.0",
        "panorama-polyfill": "^0.1.1",
        "papaparse": "^5.3.2",
        "pinyin-pro": "^3.8.3",
        "plugin-error": "^1.0.1",
        "react": "^16.14.0",
        "readline-sync": "^1.4.10",
        "replace-json-property": "^1.8.0",
        "rimraf": "^3.0.2",
        "steam-game-path": "^2.0.1",
        "terser-webpack-plugin": "^5.3.4",
        "through2": "^4.0.2",
        "ts-loader": "^8.1.0",
        "ts-node": "^10.7.0",
        "typescript": "^4.7.4",
        "typescript-to-lua": "^1.9.0",
        "use-state-if-mounted": "^1.0.7",
        "vinyl": "^2.2.1",
        "walk": "^2.3.14",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1",
        "webpack-panorama": "^0.2.0"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "always",
        "proseWrap": "never",
        "trailingComma": "es5"
    }
}
